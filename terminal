    <script src="js/main.js"></script>
    <script>
        // Collapsible sections
        document.querySelectorAll('.collapsible-header').forEach(header => {
            header.addEventListener('click', function() {
                const parent = this.parentElement;
                parent.classList.toggle('active');
                
                const icon = this.querySelector('i');
                if (parent.classList.contains('active')) {
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                } else {
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                }
            });
        });
        
        // Button functionality with loading simulation
        function simulateLoading(button, duration, loadingText, successText, resultElement) {
            const originalText = button.textContent;
            button.disabled = true;
            button.textContent = loadingText;
            
            const loadingBar = document.createElement('div');
            loadingBar.className = 'loading-bar';
            button.parentNode.appendChild(loadingBar);
            
            let width = 0;
            const interval = setInterval(() => {
                if (width >= 100) {
                    clearInterval(interval);
                    button.disabled = false;
                    button.textContent = originalText;
                    loadingBar.remove();
                    
                    if (resultElement) {
                        resultElement.textContent = successText;
                        resultElement.style.display = 'block';
                    }
                } else {
                    width += 100 / (duration / 100);
                    loadingBar.style.width = width + '%';
                }
            }, 100);
        }
        
        // IP validation
        function isValidIP(ip) {
            const ipRegex = /^(\d{1,3}\.){3}\d{1,3}$/;
            if (!ipRegex.test(ip)) return false;
            
            const parts = ip.split('.');
            for (let part of parts) {
                if (parseInt(part) > 255) return false;
            }
            
            return true;
        }
        
        // Attach button
        document.getElementById('attach-button').addEventListener('click', function() {
            const ipInput = document.getElementById('ip-input').value;
            if (!ipInput || !isValidIP(ipInput)) {
                alert('Please enter a valid IP address');
                return;
            }
            
            simulateLoading(
                this, 
                10000, 
                'Attaching to target...', 
                `Attached to IP: ${ipInput}`,
                document.getElementById('attach-result')
            );
        });
        
        // Inject button
        document.getElementById('inject-button').addEventListener('click', function() {
            const ipInput = document.getElementById('ip-input').value;
            if (!ipInput || !isValidIP(ipInput)) {
                alert('Please enter a valid IP address');
                return;
            }
            
            simulateLoading(
                this, 
                13000, 
                'Injecting VZMP.APP code...', 
                `Injected VZMP.APP code in ${ipInput}'s Router.`,
                document.getElementById('inject-result')
            );
        });
        
        // DDoS button
        document.getElementById('start-ddos').addEventListener('click', function() {
            const ipInput = document.getElementById('ip-input').value;
            if (!ipInput || !isValidIP(ipInput)) {
                alert('Please enter a valid IP address');
                return;
            }
            
            simulateLoading(
                this, 
                15000, 
                'Initiating DDoS attack...', 
                `DDoS attack launched against ${ipInput}`,
                document.getElementById('ddos-result')
            );
        });
        
        // Info Grabber button
        document.getElementById('grab-info').addEventListener('click', function() {
            const ipInput = document.getElementById('ip-input').value;
            if (!ipInput || !isValidIP(ipInput)) {
                alert('Please enter a valid IP address');
                return;
            }
            
            simulateLoading(
                this, 
                12000, 
                'Grabbing information...', 
                `Information successfully grabbed from ${ipInput}`,
                document.getElementById('grabber-result')
            );
        });
        
        // Tracker button
        document.getElementById('start-tracking').addEventListener('click', function() {
            const ipInput = document.getElementById('ip-input').value;
            if (!ipInput || !isValidIP(ipInput)) {
                alert('Please enter a valid IP address');
                return;
            }
            
            simulateLoading(
                this, 
                11000, 
                'Starting tracking...', 
                `Tracking initiated for ${ipInput}`,
                document.getElementById('tracker-result')
            );
        });
        
        // Command prompt functionality
        const commandInput = document.getElementById('command-input');
        const commandOutput = document.getElementById('command-output');
        
        const commands = {
            'help': 'Available commands: help, clear, status, scan, exploit, decrypt, encrypt, backup, restore, shutdown, reboot, history, logs, network, processes, users, firewall, ports, services, system, version, update, config, debug, test, connect, disconnect, ping, trace, whois, dns, scanports',
            'clear': function() { commandOutput.innerHTML = '<div>></div>'; },
            'status': 'VZMP.APP Online Tool is running. All systems operational.',
            'scan': 'Scanning network... No vulnerabilities detected.',
            'exploit': 'No exploits available for current target.',
            'decrypt': 'Decryption module loaded. No data to decrypt.',
            'encrypt': 'Encryption module loaded. No data to encrypt.',
            'backup': 'Backup created successfully.',
            'restore': 'Restore completed successfully.',
            'shutdown': 'Shutdown command sent to target.',
            'reboot': 'Reboot command sent to target.',
            'history': 'Command history is empty.',
            'logs': 'Displaying system logs...',
            'network': 'Network configuration displayed.',
            'processes': 'Listing running processes...',
            'users': '3 users currently logged in.',
            'firewall': 'Firewall status: Active',
            'ports': 'Scanning open ports...',
            'services': 'Listing active services...',
            'system': 'System information displayed.',
            'version': 'VZMP.APP Online Tool v2.1.3',
            'update': 'Checking for updates... You have the latest version.',
            'config': 'Configuration file loaded.',
            'debug': 'Debug mode activated.',
            'test': 'Running diagnostics... All tests passed.',
            'connect': 'Connection established.',
            'disconnect': 'Disconnected from target.',
            'ping': 'Pinging target... Response time: 47ms',
            'trace': 'Tracing route to target...',
            'whois': 'WHOIS information retrieved.',
            'dns': 'DNS records displayed.',
            'scanports': 'Scanning ports on target...'
        };
        
        commandInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const command = this.value.trim().toLowerCase();
                this.value = '';
                
                const newLine = document.createElement('div');
                newLine.textContent = '> ' + command;
                commandOutput.appendChild(newLine);
                
                if (commands.hasOwnProperty(command)) {
                    if (typeof commands[command] === 'function') {
                        commands[command]();
                    } else {
                        const response = document.createElement('div');
                        response.textContent = commands[command];
                        commandOutput.appendChild(response);
                    }
                } else {
                    const response = document.createElement('div');
                    response.textContent = `Command not found: ${command}. Type 'help' for available commands.`;
                    commandOutput.appendChild(response);
                }
                
                const prompt = document.createElement('div');
                prompt.textContent = '>';
                commandOutput.appendChild(prompt);
                
                commandOutput.scrollTop = commandOutput.scrollHeight;
            }
        });
    </script>
